<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>{% block title %}长沙之家{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap-4.0.0-alpha.6.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome-4.7.0.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header>
                <nav class="navbar navbar-toggleable-md navbar-light">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="container">
                        <a class="navbar-brand" href="{{ path('homepage') }}">长沙之家</a>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">

                            <ul class="navbar-nav mx-sm-4">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('homepage') }}">首页</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('group_index') }}">群组</a>
                                </li>
                            </ul>

                            <form class="navbar-search form-inline ml-sm-4 mr-auto">
                                <div class="input-group">
                                    <input class="form-control" type="text" placeholder="搜索话题">
                                    <button class="btn btn-search" type="submit">搜索
                                    </button>
                                </div>
                            </form>

                            <ul class="navbar-nav">
                                {% if app.user %}

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle"
                                           href="{{ path('account_index') }}"
                                           data-toggle="dropdown">
                                            {{ app.user.username }}
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="{{ path('account_index') }}">我的账号</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="{{ path('security_logout') }}">退出</a>
                                        </div>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('user_register') }}">没有账号？立即注册</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('security_login') }}">登录</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}
        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div id="main" class="col-8">
                        {{ include('default/_flash_messages.html.twig') }}
                        {% block main %}{% endblock %}
                    </div>
                    <div id="sidebar" class="col-4">
                        {% block sidebar %}{% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block footer %}
            <footer>
                <div class="container py-3">
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-0 text-muted">&copy; 2016 长沙之家 版权所有</p>
                        </div>
                        <div class="col-6">
                            <ul class="mb-0 list-inline pull-right">
                                <li class="list-inline-item"><a href="">关于长沙之家</a></li>
                                <li class="list-inline-item"><a href="">联系我们</a></li>
                                <li class="list-inline-item"><a href="">服务条款</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
            <script src="{{ asset('js/tether-1.3.3.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap-4.0.0-alpha.6.min.js') }}"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
