{% extends 'base.html.twig' %}

{% block title '编辑回复"' ~ comment.topic.title ~ '"' %}

{% block main %}

    <h5 class="page-header-text mb-4">编辑回复</h5>

    {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}
    {{ form_widget(form) }}

    <div class="form-group">
        <button class="btn btn-primary" type="submit">保存</button>
        <a href="{{ path('topic_show', {'id': comment.topic.id}) }}#comment-{{ comment.id }}" class="btn btn-link text-muted">取消</a>
    </div>

    {{ form_end(form) }}

{% endblock %}