{% extends '::base.html.twig' %}

{% block title '发表新主题' %}

{% block main %}

    <div class="section">

        <h5 class="section-header"><a href="{{ path('group_topic', {'slug': group.slug}) }}">{{ group.name }}</a> / 发表新主题</h5>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">发起主题</button>
        {{ form_end(form) }}

        <div class="py-2">
            或 <a href="{{ path('group_topic', {'slug': group.slug}) }}">回到{{ group.name }}</a>
        </div>
    </div>

{% endblock %}