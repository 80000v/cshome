{% extends '::base.html.twig' %}

{% block title '编辑"' ~ topic.title ~ '"' %}

{% block main %}

    <div class="section">

        <h5 class="section-header"><a href="{{ path('group_topic_show', {'id': topic.id}) }}">{{ topic.title }}</a> /
            编辑主题</h5>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">保存</button>
        {{ form_end(form) }}

        <div class="py-2">
            或 <a href="{{ path('group_topic_show', {'id': topic.id}) }}">取消编辑</a>
        </div>
    </div>
{% endblock %}