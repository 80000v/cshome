{% extends '::base.html.twig' %}

{% block title group.name %}

{% block main %}

    <div class="topic-list">
        <header class="topic-list-header">
            <h5>
                {{ group.name }}
                <a class="btn btn-sm btn-outline-primary pull-right" href="{{ path('topic_new', {'slug': group.slug}) }}"><i class="fa fa-pencil"></i> 发新主题</a>
            </h5>
        </header>

        <ul class="topic-list-items">
            {% for topic in topics %}
                <li class="topic-list-item">
                    <a href="{{ path('topic_show', {'id': topic.id}) }}" class="item-title">{{ topic.title }}</a>
                    <div class="topic-item-meta">
                        <span><a href="{{ path('user_profile', {'username': topic.user.username }) }}">{{ topic.user.name }}</a></span>
                        <span class="topic-item-meta-bullet">•</span>
                        <abbr>{{ topic.createdAt | date('m-d H:i') }}</abbr>
                        <span class="topic-item-meta-bullet">•</span>
                        <span>{{ topic.numComments }}回复</span>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="topic-list-pagination">

        </div>
    </div>

{% endblock %}

{% block sidebar %}

    {{ render(controller('GroupBundle:Group:recommend')) }}

{% endblock %}