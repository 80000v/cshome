{% extends '::base.html.twig' %}

{% block title group.name %}

{% block main %}

    <div class="group-discussion-view">

        <div class="mb-4">
            <h5 class="d-inline-block mr-4">{{ group.name }}</h5>
            <a class="btn btn-primary btn-sm pull-right" href="{{ path('group_topic_new', {'slug': group.slug}) }}">发表主题</a>
        </div>

        <table class="table">
            <tr class="text-muted">
                <td>标题</td>
                <td>作者</td>
                <td class="text-right">回复</td>
                <td class="text-right">最后回复</td>
            </tr>
            {% for topic in topics %}
                <tr>
                    <td><a href="{{ path('group_topic_show', {'id': topic.id}) }}">{{ topic.title }}</a></td>
                    <td><a href="">{{ topic.user.username }}</a></td>
                    <td class="text-right text-muted">{{ topic.numComments }}</td>
                    <td class="text-right text-muted">{{ topic.createdAt | date('m-d H:i') }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}

{% block sidebar %}

    <div class="card">
        <div class="card-header">header</div>
        <div class="card-block">
            text
        </div>
    </div>

{% endblock %}