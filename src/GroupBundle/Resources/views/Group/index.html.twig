{% extends '::base.html.twig' %}

{% block title '群组' %}

{% block main %}

    <div class="group-discussion-view">

        <div class="mb-4">
            <h5>最新主题</h5>
        </div>

        <table class="table">
            <tr class="text-muted">
                <td>标题</td>
                <td>回复</td>
                <td class="text-right">最后回复</td>
                <td class="text-right">群组</td>
            </tr>
            {% for topic in topics %}
                <tr>
                    <td><a href="{{ path('group_topic_show', {'id': topic.id}) }}">{{ topic.title }}</a></td>
                    <td class="text-muted">{{ topic.numComments }}</td>
                    <td class="text-right text-muted">{{ topic.createdAt | date('m-d H:i') }}</td>
                    <td class="text-right text-muted"><a
                                href="{{ path('group_topic', {'slug': topic.group.slug}) }}">{{ topic.group.name }}</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}

{% block sidebar %}

    <div class="card">
        <div class="card-header">header</div>
        <div class="card-block">
            text
        </div>
    </div>

{% endblock %}