{% extends '::base.html.twig' %}

{% block title '我的账号' %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('settings_index') }}">我的账号</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('settings_password') }}">修改密码</a>
        </li>
    </ul>

    <div class="row my-4">

        <div class="col-md-6">

            {{ form_start(form) }}

            <div class="form-group row">
                <label class="col-form-label col-md-4">用户名</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ user.username }}</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-md-4">个性域名</label>
                <div class="col-md-8">
                    <p class="form-control-static">{{ app.request.schemeAndHttpHost }}/profile/<span class="font-weight-bold">{{ user.username }}</span></p>
                </div>
            </div>

            <div class="form-group row {% if not form.name.vars.valid %}has-danger{% endif %}">
                <label class="col-form-label col-md-4">昵称</label>

                <div class="col-md-8">
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-8 ml-auto">
                    <button class="btn btn-primary" type="submit">保存</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}